// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userUid    String      @id
  Subscriber Subscriber?
  Habits     Habit[]
  Days       Day[]

  @@unique([userUid])
  @@map("users")
}

model Subscriber {
  userUid      String @id
  subscription String

  user User @relation(fields: [userUid], references: [userUid])

  @@unique([userUid])
  @@map("subscribers")
}

model Habit {
  uuid      String          @id @default(uuid())
  userUid   String
  title     String
  createAt  DateTime
  DayHabits DayHabit[]
  WeekDays  HabitWeekDays[]

  user User @relation(fields: [userUid], references: [userUid])

  @@map("habits")
}

model HabitWeekDays {
  uuid    String @id @default(uuid())
  habitId String
  weekDay Int

  habit Habit @relation(fields: [habitId], references: [uuid])

  @@unique([habitId, weekDay])
  @@map("habitweekdays")
}

model Day {
  uuid      String     @id @default(uuid())
  userUid   String
  date      DateTime
  DayHabits DayHabit[]

  user User @relation(fields: [userUid], references: [userUid])

  @@unique([userUid])
  @@map("days")
}

model DayHabit {
  uuid    String @id @default(uuid())
  dayId   String
  habitId String

  day   Day   @relation(fields: [dayId], references: [uuid])
  habit Habit @relation(fields: [habitId], references: [uuid])

  @@unique([dayId, habitId])
  @@map("dayhabits")
}
